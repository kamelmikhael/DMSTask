@model IEnumerable<DMSTask.Models.UnitOfMeasure>

@{
    ViewData["Title"] = "Index";
}

<h1>Unit Of Measures</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="UnitOfMeasures" asp-action="Index" method="get">
    <p>
        Search: <input type="text" name="filter" value="@(ViewData["Filter"])" />
        <input type="submit" value="Search" class="btn btn-primary" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UOM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UOM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
